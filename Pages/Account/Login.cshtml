@page
@model DotnetMoviesAppRazor.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    ViewData["active"] = 1;
}
<div class="container">
    <div class="col-9">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="padding-top:60px;padding-bottom:20px;">Log in</h3>
            </div>
            <div class="panel-body">
                <form role="form" method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Email address" name="email" type="email"
                                autofocus="" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" value=""
                                asp-for="Password">
                        </div>
                        <div class="checkbox">
                            <label class="panel-title" style="padding-bottom:10px;">
                                <input asp-for="RememberMe" type="checkbox" value="Remember Me"> Remember me
                            </label>
                        </div>
                        <input type="submit" value="Log in" class="btn btn-cm btn-info btn-login">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>