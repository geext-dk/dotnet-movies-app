@page
@model DotnetMoviesAppRazor.Pages.IndexModel
@{
    ViewData["active"] = 0;
}
<div class="container-fluid bgr-color">
    <div class="container search-film">
        <h1 style="padding-bottom:30px">Film List</h1>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form id="search-form" class="input-group">
                        <input id="input-filter" type="text" class="form-control"
                            placeholder="Type a title or a keyword..." />
                        <div class="input-group-btn">
                            <div class="btn-group" role="group">
                                <select id="filter-opts" required class="form-control">
                                    <option value="0">Title</option>
                                    <option value="1">Director</option>
                                    <option value="2">Actor</option>
                                    <option value="3">Year</option>
                                    <option value="4">Genre</option>
                                </select>
                                <button id="start-search" type="submit" class="btn btn-info">
                                    <span class="glyphicon glyphicon-search" aria-hidden="false">Search</span></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container film-con">
    <div class="container" style="padding-bottom:10px;">
        <p style="margin-bottom:5px;">
            Sort:
        <div class="tab-pane active" style="text-align:right;" id="sort">
            <form>
                <div class="controls controls-row">
                    <select id="sort-opt" class="form-control col-3">
                        <option value="0">Title</option>
                        <option value="1">Newer first</option>
                        <option value="2">Older first</option>
                    </select>
                </div>
            </form>
        </div>
        </p>
    </div>
    <div id="partial-dest">
    </div>
</div>
