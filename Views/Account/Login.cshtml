@model MoviesApp.ViewModels.LoginModel
@{
  ViewData["Title"] = "Вход";
  ViewData["active"] = 1;
}
<div class="container">
    <div class="col-9">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="padding-top:60px;padding-bottom:20px;">Вход</h3>
            </div>
            <div class="panel-body">
                <form role="form" method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="Адрес электронной почты" name="email" type="email" autofocus="" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Пароль" name="password" type="password" value="" asp-for="Password">
                        </div>
                        <div class="checkbox">
                            <label class="panel-title" style="padding-bottom:10px;">
                                <input asp-for="RememberMe" type="checkbox" value="Remember Me"> Запомнить меня
                            </label>
                        </div>
                        <input type="submit" value="Вход" class="btn btn-cm btn-info btn-login">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>