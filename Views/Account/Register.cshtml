@model MoviesApp.ViewModels.RegisterModel
@{
  ViewData["Title"] = "Регистрация";
  ViewData["active"] = 2;
}
<div class="container">
    <div class="col login-form">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="padding-top:60px;padding-bottom:20px;">Регистрация</h3>
            </div>
            <div class="panel-body">
                <form role="form" method="post" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <fieldset>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Адрес электронной почты" type="email" autofocus="">
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Пароль" type="password" value="">
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordConfirm" class="form-control" placeholder="Подтвердите пароль" type="password" value="">
                        </div>
                        <input type="submit" value="Регистрация" class="btn btn-cm btn-info btn-reg">
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>