@model User
@{
    ViewData["Title"] = "Home Page";
    ViewData["active"] = 1;
}
<div class="container film-con">
  <h2>Профиль пользователя</h2>
  <p style="text-align:center;">@Model.Email</p>
  <br />
  <div class="container">
    <div class="row">
      <div class="col">
        <h4>Коллекция фильмов пользователя</h4>
        <br>
        <div class="row">
        @foreach (var favorite in Model.Favorites)
        {
          Film f = favorite.Film;

          <div class="col-1 col-sm-2 col-md-3 col-lg-3"><a asp-controller="Home" asp-action="Info" asp-route-id="@f.FilmId"><img src="@f.PosterPath" alt="" class="w-100">
            <h6>@f.Title</h6></a>
            <p class="film-type-pr">@f.stringGenre() (@f.ReleaseYear)</p>
          </div>
        }
        </div>
      </div>
      <div class="col">
        <h4>Рецензии пользователя</h4>
        <br>
        <div class="row">
        @foreach (var review in Model.FilmReviews)
        {
          Film f = review.Film;
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="container review-pr"><p>Рецензия на <a asp-controller="Home" asp-action="Info" asp-route-id="@f.FilmId" class="film-link">@f.Title</a></p></div>
            <p>@review.Title</p>
            <p>@review.Body</p>
            <form method="post" asp-controller="User" asp-action="ReviewsRemove" asp-route-filmReviewId="@review.FilmReviewId">
              <input type="submit" class="btn text-right" value="Удалить" />
            </form>
          </div>
        }
        </div>
      </div>
    </div>
  </div>
</div>